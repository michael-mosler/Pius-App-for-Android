<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/default_border"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/popoverShortcutName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            tools:text="AAA" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="0dp"
            android:background="#969696" />

        <TextView
            android:id="@+id/popoverSubjects"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            tools:text="Mathematik, Deutsch" />

        <View
            android:id="@+id/popoverEmailLine"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="0dp"
            android:background="#969696" />

        <TextView
            android:id="@+id/popoverEmail"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            tools:text="x.name@example.com"
            android:textColorLink="@color/colorPiusBlue"
            android:autoLink="email"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>